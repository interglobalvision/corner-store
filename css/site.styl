@import "sanitize"
@import "helpers"

// GRID OF 12 90px COLUMNS WITH 16px GUTTER
$cols = 12
$col = 90px
$gutter = 16px
.container 
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// FLUID COLS
.percent-col
  float: left
  box-sizing: content-box
$pcols = 10
for pcol in 1..$pcols
  .into-{pcol}
    width: ( 100% / pcol )

// VARIABLES

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-basic = ($gutter * 2)
$margin-large = ($gutter * 5)

$font-size-basic = 15px
$font-leading-basic = 1.35em
$font-tracking-basic = 0.001em

$color-black-soft = rgb(14, 14, 14)
$color-white-soft = rgb(253, 253, 253)

// TYPOGRAPHY

body
  font-family: helvetica, arial, sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 3em
 
h2
  font-size: 2em

h3
  font-size: 1.5em

p
  margin-bottom: 1em


// LINKS

a, a:active, a:visited
  color:inherit


// BASIC

html, body
  background-color: $color-white-soft
  color: $color-white-soft
  width: 100%
  height: 100%

img
  max-width: 100%
  height: auto
  
main#main-content
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  opacity: 0
  
  
#background-slider
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 0
  opacity: 0
  div 
    background-position: center
    background-size: cover
    background-repeat: no-repeat
    width: 100%
    height: 100%
    
img#logo
  max-width: 90%
    
#contact
  margin-top: $margin-basic
  text-transform: uppercase
  font-family: 'Montserrat', sans-serif
  font-weight: 400
  font-size: .7em
  p
    font-size: 1.3em
    font-weight: 700
    line-height: $font-leading-basic


//the 100% widths are just so stylus can compile delete as desired

// HEADER

#header
  width: 100%

// POSTS LOOP
#posts
  width: 100%

.post
  width: 100%

#pagination
  width: 100%


// FOOTER

#footer
  width: 100%


// MEDIA QUERIES

@media screen and ( max-height: 400px )
  img#logo
    max-width: 70%
    
  #contact
    margin-top: $margin-small
    p
      margin-bottom: .6em
  

